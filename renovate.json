{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,
  "packageRules": [
    {
      "description": "Group all Docker base images together",
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "node",
        "rust",
        "openjdk",
        "golang",
        "python",
        "alpine",
        "postgres"
      ],
      "groupName": "Docker base images",
      "schedule": ["before 6am"]
    },
    {
      "description": "Keep Docker images on LTS versions where applicable",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["node"],
      "allowedVersions": "/^\\d+\\.(\\d*[02468]\\.\\d+|0\\.0)/"
    },
    {
      "description": "Keep Java runtime on LTS versions only",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["openjdk"],
      "allowedVersions": "/^(8|11|17|21|25)(-.*)?$/"
    },
    {
      "description": "Group OpenTelemetry packages together",
      "matchDatasources": ["npm"],
      "matchPackagePatterns": ["^@opentelemetry/"],
      "groupName": "OpenTelemetry packages",
      "schedule": ["before 6am"]
    },
    {
      "description": "Group Rust dependencies together",
      "matchDatasources": ["crate"],
      "groupName": "Rust dependencies",
      "schedule": ["before 6am"]
    },
    {
      "description": "Group Java/Gradle dependencies together",
      "matchDatasources": ["gradle"],
      "groupName": "Java dependencies",
      "schedule": ["before 6am"]
    },
    {
      "description": "Pin OCB versions and update weekly",
      "matchDatasources": ["ocb"],
      "groupName": "OpenTelemetry Collector Builder",
      "schedule": ["before 6am"]
    }
  ],
  "ocb": {
    "enabled": true
  },
  "docker": {
    "enabled": true,
    "pinDigests": false
  },
  "npm": {
    "enabled": true
  },
  "cargo": {
    "enabled": true
  },
  "gradle": {
    "enabled": true
  },
  "schedule": ["before 6am"],
  "timezone": "Europe/Vienna",
  "dependencyDashboard": true,
  "platformAutomerge": false,
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "rebaseWhen": "conflicted",
  "semanticCommits": "enabled"
}