{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true,
      "pinDigests": false
    },
    {
      "description": "Group all Docker base images together",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "node",
        "rust",
        "openjdk",
        "golang",
        "python",
        "alpine",
        "postgres"
      ],
      "groupName": "Docker base images"
    },
    {
      "description": "Keep Docker images on LTS versions where applicable",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "node"
      ],
      "allowedVersions": "/^\\d+\\.(\\d*[02468]\\.\\d+|0\\.0)/"
    },
    {
      "description": "Keep Java runtime on LTS versions only",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "openjdk"
      ],
      "allowedVersions": "/^(8|11|17|21|25)(-.*)?$/"
    },
    {
      "description": "Group OpenTelemetry packages together",
      "matchDatasources": [
        "npm"
      ],
      "groupName": "OpenTelemetry packages",
      "matchPackageNames": [
        "/^@opentelemetry//"
      ],
      "rangeStrategy": "bump"
    },
    {
      "description": "Group Rust dependencies together",
      "matchDatasources": [
        "crate"
      ],
      "groupName": "Rust dependencies"
    },
    {
      "description": "Group Java/Gradle dependencies together",
      "matchDatasources": [
        "gradle"
      ],
      "groupName": "Java dependencies"
    },
    {
      "description": "Group all OCB components together",
      "matchmanagers": [
        "ocb"
      ],
      "matchSourceUrls": [
        "https://github.com/open-telemetry/opentelemetry-collector",
        "https://github.com/open-telemetry/opentelemetry-collector-contrib"
      ],
      "groupName": "OpenTelemetry Collector Builder"
    }
  ],
  "ocb": {
    "enabled": true,
    "managerFilePatterns": ["otel-collector/ocb-manifest.yaml"],
    "bumpVersion": "minor"
  },
  "npm": {
    "enabled": true
  },
  "cargo": {
    "enabled": true
  },
  "gradle": {
    "enabled": true
  },
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "osvVulnerabilityAlerts": true,
  "platformAutomerge": false,
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "rebaseWhen": "behind-base-branch",
  "semanticCommits": "enabled",
  "gitAuthor": "renovate[bot] <29139614+renovate[bot]@users.noreply.github.com>"
}
