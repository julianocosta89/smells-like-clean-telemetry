{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "repositories": ["julianocosta89/smells-like-clean-telemetry"],
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true,
      "pinDigests": false
    },
    {
      "description": "Group all Docker base images together",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "node",
        "rust",
        "openjdk",
        "golang",
        "python",
        "alpine",
        "postgres"
      ],
      "groupName": "Docker base images"
    },
    {
      "description": "Keep Docker images on LTS versions where applicable",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "node"
      ],
      "allowedVersions": "/^\\d+\\.(\\d*[02468]\\.\\d+|0\\.0)/"
    },
    {
      "description": "Keep Java runtime on LTS versions only",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "openjdk"
      ],
      "allowedVersions": "/^(8|11|17|21|25)(-.*)?$/"
    },
    {
      "description": "Group OpenTelemetry packages together",
      "matchDatasources": [
        "npm"
      ],
      "groupName": "OpenTelemetry packages",
      "matchPackageNames": [
        "/^@opentelemetry//"
      ]
    },
    {
      "description": "Group Rust dependencies together",
      "matchDatasources": [
        "crate"
      ],
      "groupName": "Rust dependencies"
    },
    {
      "description": "Group Java/Gradle dependencies together",
      "matchDatasources": [
        "gradle"
      ],
      "groupName": "Java dependencies"
    },
    {
      "description": "Pin OCB versions and update",
      "matchDatasources": [
        "ocb"
      ],
      "groupName": "OpenTelemetry Collector Builder"
    }
  ],
  "ocb": {
    "enabled": true
  },
  "npm": {
    "enabled": true
  },
  "cargo": {
    "enabled": true
  },
  "gradle": {
    "enabled": true
  },
  "dependencyDashboard": true,
  "platformAutomerge": false,
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "rebaseWhen": "conflicted",
  "semanticCommits": "enabled"
}
